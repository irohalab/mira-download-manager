{
   "compilerOptions": {
      "lib": [
         "es2022",
         "esnext.asynciterable",
         "WebWorker"
      ],
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "sourceMap": true,
      "baseUrl": "src",
      "rootDir": "src",
      "paths": {
         "*": ["node_modules/@types"]
      }
   },
   "exclude": [
      "node_modules"
   ]
}